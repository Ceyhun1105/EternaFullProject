@model List<Feature>
@{
    int counter = 0;
}

<div class="container pt-3">
    <h2 style="text-align:center">Features</h2>
</div>

<div class="container pt-5">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Icon</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">
                    <a asp-controller="Feature" asp-action="create" class="btn btn-primary">Create</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Feature cl in Model)
            {
                counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@cl.Id</td>
                        <td>@Html.Raw(cl.Icon)</td>
                        <td>@cl.Title</td>
                        <td>@cl.Description</td>
                        <td>
                            <a asp-controller="Feature" asp-action="update" asp-route-id="@cl.Id" class="btn btn-success">Update</a>
                            <a asp-controller="Feature" asp-action="delete" asp-route-id="@cl.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>





